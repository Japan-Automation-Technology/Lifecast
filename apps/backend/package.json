{
  "name": "@lifecast/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:worker:notifications": "tsx watch src/workers/notifications.ts",
    "dev:worker:outbox": "tsx watch src/workers/outbox.ts",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:bootstrap": "pnpm db:migrate && pnpm db:seed",
    "smoke:payments": "tsx src/scripts/paymentsSmoke.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "tsx --test src/**/*.test.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "dotenv": "^17.3.1",
    "fastify": "^5.1.0",
    "pg": "^8.13.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/pg": "^8.15.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
